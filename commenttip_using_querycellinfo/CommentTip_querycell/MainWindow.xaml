<Window x:Class="CommentTip_querycell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommentTip_querycell"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="TopLeftCommentTemplate">
            <Border x:Name="border" BorderThickness="1" BorderBrush="DarkBlue">
                <TextBlock Background="Purple" Foreground="White" FontSize="14" FontStyle="Italic" Text="{Binding Comment}" />
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="TextBlockTemplate1">
            <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Text="{Binding CellBoundValue}"></TextBlock>
        </DataTemplate>
    </Window.Resources>
    <Grid Name="gridcontrol">
        
    </Grid>
</Window>
